<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="28dp"
    tools:context=".addBookFragment">

    <EditText
        android:id="@+id/edt_bookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:hint="Name of Book"
        app:layout_constraintTop_toTopOf="parent"

        />

    <EditText
        android:id="@+id/edt_AuthorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Author name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/edt_bookName"
        android:autofillHints="" />

   <Button
       android:id="@+id/btn_addBook"
       android:layout_width="match_parent"
       android:layout_height="56dp"
       app:layout_constraintTop_toBottomOf="@id/edt_AuthorName"
       android:layout_marginTop="16dp"
       android:background="@drawable/category_back"
       android:text="Add Book"
       android:backgroundTint="@color/fiolet"
       android:textColor="@color/white"
       />

</androidx.constraintlayout.widget.ConstraintLayout>