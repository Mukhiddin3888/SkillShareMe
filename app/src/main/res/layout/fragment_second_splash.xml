<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/splash_back2"
    tools:context=".splash.secondSplashFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <ImageView
           android:id="@+id/img_spl2"
          app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:src="@drawable/splash2"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="140dp"
           />
       <TextView
           android:id="@+id/txv_spl1"

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="28dp"
           android:layout_marginTop="64dp"
           android:layout_marginEnd="28dp"

           android:text="@string/txt_splash2"
           android:textAlignment="center"
           android:textColor="@color/white"

           android:textSize="20sp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/img_spl2" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/txv_spl1"
           app:layout_constraintBottom_toTopOf="@id/txv_skip_2"

           android:padding="8dp">

           <Button
               android:id="@+id/sp2_btn_next1"
               android:layout_width="8dp"
               android:layout_height="8dp"
               android:background="@drawable/ic_choosen"
               android:backgroundTint="@color/secondary"
               android:layout_marginEnd="5dp"/>

           <Button
               android:id="@+id/sp2_btn_next2"
               android:layout_width="8dp"
               android:layout_height="8dp"
               android:background="@drawable/ic_not_choosen"
               android:layout_marginEnd="5dp"
               />

           <Button
               android:id="@+id/sp2_btn_next3"
               android:layout_width="8dp"
               android:layout_height="8dp"
               android:background="@drawable/ic_not_choosen" />


       </LinearLayout>


       <TextView
           android:id="@+id/txv_skip_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="64dp"
           android:text="Skip"
           android:textColor="@color/white"
           android:textSize="22sp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>